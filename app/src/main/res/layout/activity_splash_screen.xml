<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baseBgcolor">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="246dp"
        android:layout_height="246dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="119dp"
        android:src="@drawable/logo"
        app:civ_border_color="#7F5AF0"
        app:civ_border_width="3dp" >



    </de.hdodenhof.circleimageview.CircleImageView>



    <TextView

        android:layout_width="325dp"
        android:layout_height="25dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="43dp"
        android:fontFamily="@font/oxanium_medium"
        android:text="Empower, Educate, Enlighten:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="134dp"
            android:layout_height="19dp"
            android:layout_marginLeft="2dp"
            android:text="Connecting Minds on"
            android:textColor="#94A1B2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/oxanium_medium"
            android:text="Enlight"
            android:textColor="#7F5AF0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:fontFamily="@font/oxanium_medium"
            android:text="21"
            android:textColor="#21CCB7"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
